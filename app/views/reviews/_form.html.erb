<% if @review.errors.any? %>
   <div class="errors">
      <% @review.errors.full_messages.each do |e| %>
         <ul>
            <li><%= e %></li>
         </ul>
       <% end %>
   </div>
<% end %>

<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :body %>
  <%= f.input :score %>
  <%= f.input :phone_number %>
  <%= f.input :address %>
  <%= f.input :ambiance %>
  <%= f.input :price %>
  <%= f.input :cuisine %>

  <%= f.button :submit %>
<% end %>